{
  "name": "allotracteur-api",
  "version": "1.0.0",
  "description": "API Backend ALLOTRACTEUR - Plateforme de mise en relation producteurs et prestataires agricoles au Sénégal",
  "main": "src/serveur.js",
  "type": "commonjs",
  "scripts": {
    "start": "node src/serveur.js",
    "dev": "nodemon src/serveur.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "seed": "node src/seeders/seed.js",
    "seed:clear": "node src/seeders/seed.js --clear",
    "lint": "eslint src/**/*.js",
    "logs": "tail -f logs/combined.log",
    "verify": "node verifier-config.js",
    "build": "echo 'Backend ALLOTRACTEUR ready for deployment'",
    "vercel-build": "npm run build"
  },
  "keywords": [
    "agriculture",
    "tracteur",
    "location",
    "senegal"
  ],
  "author": "ALLOTRACTEUR Team",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.6.2",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^2.8.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.0",
    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.11",
    "superagent": "^10.2.3",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^7.1.4"
  },
  "engines": {
    "node": "24.x",
    "npm": ">=9.0.0"
  }
}
